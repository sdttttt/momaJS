/* pages/shopping/cart/cart.wxss */
.product{
  margin: auto;
  margin-top: 20rpx;
  padding: 20rpx;
  width: 90%;
  background-color: white;
  display: flex;
  border-radius: 33rpx;
  height: 200rpx;
}

.product .selected{
  margin-top: 10rpx;
  position: relative;
  top: 70rpx;
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.product .selected image{
  width: 100%;
  height: 100%;
}

.product .img{
  border-radius: 22rpx;
  width: 200rpx;
  height: 200rpx;
}

.product .img image{
  border-radius: 22rpx;
  width: 100%;
  height: 100%;
}

.product .context{
  flex-direction: column;
  padding-left: 20rpx;
}

.product .context .title{
  font-size: 40rpx;
  font-family: 微软雅黑;
}

.product .context .price{
  color: red;
  margin-top: 10rpx;
}

.product .context .count{
  margin-top: 15rpx;
  color: #444;

}

.footer{
  display: flex;
  position: fixed;
  bottom : 0rpx;
  width: 100%;
  height: 80rpx;
  background-color: #AB7D3D;
  padding-top: 15rpx;
  padding-left: 20rpx;
}

.all{
  margin: 10rpx;
  color: white;
  font-size: 35rpx;
  text-align: right;  
}

.footer .all-selected{
  display: flex;
  /* margin-top: 10rpx; */
  width: 66rpx;
  height: 66rpx;
}

.footer .all-selected image{
  text-align: left;
  width: 100%;
  height: 100%;
}

.footer .delete{
  margin-left: 50rpx;
  color: white;
}

.footer .delete .delete-btn{
  height: 70rpx;
  font-size: 30rpx;
  border-radius: 100rpx;
}

.footer .price{
  margin-left: 40rpx;

  color: white;
  font-size: 35rpx;
}

.footer .price .product-price{
  font-family: 微软雅黑;
  font-size: 50rpx;
}

.footer .Go{
  position: fixed;
  top: 820rpx;
  right: 33rpx;
  color: rgb(255, 255, 255);
}
.footer .Go .Go-btn{
  line-height: 140rpx;
  height: 140rpx;
  font-size: 40rpx;
  border-radius: 200rpx;

}

.notCart{
  color: #444;
  font-size: 66rpx;
  font-weight: 800;
  width: 100%;
  text-align: center;
  margin-top: 500rpx;
}