.count{
  margin: auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 500rpx;
  height: 100rpx;
  background-color: #AB7D3D;
  border-radius: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: white;
}
.count .cart-icon{
  width: 50rpx;
  height: 50rpx;
}

.count .cart-icon image{
  width: 100%;
  height: 100%;
}

.info{
  margin: auto;
  width: 80%;
  align-content: space-between;
  background-color: white;
  border-radius: 44rpx;
  padding: 25rpx;
  box-shadow:0px 1px 8px #333333;
}

.info .title{
  font-size: 50rpx;
  height: 50rpx;
  font-family: 微软雅黑;
}

.info .price{
  margin-top: 33rpx;
  height: 50rpx;
  color: red;
  font-size: 33rpx;
  
}

.info .info-info{
    margin-top: 50rpx;
    height: 50rpx;
  font-size: 30rpx;
}