/* pages/shopping/product/product.wxss */

.cart{
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  width: 50rpx;
  height: 50rpx;
}
.cart image{
  width: 100%;
  height: 100%;
}

.img{
  margin: auto;
  width: 600rpx;
  height: 500rpx;
}

.img image{
  width: 100%;
  height: 100%;
}

.title{
  width: 100%;
  height: 200rpx;
  background-color: white;
  padding: 20rpx;
}

.count{
  margin: auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 500rpx;
  height: 100rpx;
  background-color: #AB7D3D;
  border-radius: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: white;
}
.count .cart-icon{
  width: 50rpx;
  height: 50rpx;
}

.count .cart-icon image{
  width: 100%;
  height: 100%;
}
