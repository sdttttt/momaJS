/* pages/shopping/category/category.wxss */
.menu{
  display: flex;
  justify-content: space-around;
  background-color: white;
  width: 100%;
  align-items: center;
  height: 100rpx;
}
.menu .categoryTitle{
  font-family: "微软雅黑";
  font-size: 38rpx;
  background-color : white;
}

.menu .categoryTitleSelected{
  font-family: "微软雅黑";
  font-size: 44rpx;
  color : red;
  border-bottom: 2rpx solid;
}

.product{
  display: flex;
  width: 100%;
  margin-top: 10rpx;
  background-color: white;
  padding: 20rpx;
}

.product .img{
  width: 250rpx;
  height: 250rpx;
}

.product .img image{
  width: 100%;
  height: 100%;
}

.product .context{
  margin-left: 30rpx;
  align-content: space-around;
}

.product .name{

}

.product .price{
  margin-top: 33rpx;
  color: red;

}

.product .text{
  margin-top: 33rpx;
  font-family: 微软雅黑;
  font-size: 28rpx;
  color: #AAA;
}