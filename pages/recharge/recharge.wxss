/* pages/recharge/recharge.wxss */
.display{
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 333rpx;
  text-align: center;
  width: 100%;
}
.display .text{
  margin-top: 40rpx;
  font-size:44rpx;
  font-family: 微软雅黑;
}
.display .num{
  margin-top: 23rpx;
  font-size:77rpx;
  font-family: 微软雅黑;
}

.action{
  margin-top:50rpx;
  background-color: white;
  height: 600rpx;
}

.action .title{
  margin-left: 23rpx;
  margin-top: 23rpx;
  font-family: 微软雅黑;
  font-size: 44rpx;
}

.action .money{
  margin-top:30rpx;
  display: flex;
  justify-content: space-around;  
}

.action .money .money-item{
  border: 1rpx solid black;
  width: 22%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 33rpx;
}

.action .money .money-itemSelect{
  border: 1rpx solid blue;
  width: 22%;
  height: 70rpx;
  color: blue;
  line-height: 70rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 33rpx;
  font-weight: 800;
  font-family: 楷体;
}
.money-item-orthe{
  margin-top: 33rpx;
  margin-left: 44rpx;
  border: 1rpx solid black;
  width: 22%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 33rpx;
}
.inputBox{
  background-color:white;
  width: 85%;
  margin: auto;
  font-size:50rpx;
  color: black;
  font-weight: 800;
  height: 100rpx;
  border: 1rpx solid #EEE;
  border-radius: 44rpx;
  text-align: center;
}

.submit{
  margin: auto;
  margin-top: 100rpx;
  width: 66%;
  height: 100rpx;
  text-align: center;
  color: white;
  line-height:100rpx; 
  background-color:cornflowerblue;
  border-radius: 55rpx;
}

