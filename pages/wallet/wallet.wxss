/* pages/wallet/wallet.wxss */

.myWallet{
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background-color: white;
  margin: auto;
  margin-top: 40rpx;
  width: 70%;
  height: 200rpx;
  border-radius: 33rpx;
  -webkit-box-shadow:0px 4px 5px #333333; 
}

.myCard{
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background-color: white;
  margin: auto;
  margin-top: 40rpx;
  width: 70%;
  height: 200rpx;
  border-radius: 33rpx;
  -webkit-box-shadow:0px 4px 5px #333333; 
}
.text .name{
  margin-top: 30rpx;
  font-size:38rpx;
  font-family: 微软雅黑;
  
}
.text .num{
  font-size:70rpx;
  font-family: 微软雅黑;
}

.icon{
  margin-top:20rpx;
  margin-right: 20rpx;
  width: 133rpx;
  height: 133rpx;
}
.icon image{
  width: 100%;
  height: 100%;
}